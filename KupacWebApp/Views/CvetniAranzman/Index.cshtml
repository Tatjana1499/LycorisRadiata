@model List<CvetniAranzmanViewModel>

@if (Model.Count == 0)
{
    <div class="list-group-item rounded-pill" style="border-style: solid; border-width: medium; border-color: brown; margin: 30px;padding-left:80px;margin-top:100px">
        <h1 class="font-weight-bolder text-center font-italic">Još uvek niste kreirali nijedan cvetni aranžman</h1>
    </div>
}
else
{
    <div style="max-height:600px; overflow-y:scroll">
        @foreach (CvetniAranzmanViewModel item in Model)
        {
            <div class="list-group-item rounded-pill" style="border-style: solid; border-width: medium; border-color: brown; margin: 30px;padding-left:150px; background-repeat: no-repeat;background-size:auto 100%;background-position-x:right; background-image: url(../slike/okvir7.jpg) ">
                <div class="toast-header font-weight-bolder rounded-pill" style="width:55%; background-color:#c27474; margin-top:30px">
                    <h4 style="text-align: center;" class="text-dark">Naziv: @item.Naziv</h4>
                </div>
                <div style="width:70%; padding-bottom:30px">
                    <div style="margin-top:10px">
                        @if (item.Masna)
                        {
                            <label>Mašna: Da</label>
                        }
                        else
                        {
                            <label>Mašna: Ne</label>
                        }
                    </div>
                    <div>
                        <label>Sjaj: @item.Sjaj.ToString()</label>
                    </div>
                    <div>
                        <label>Pakovanje: @item.Pakovanje.ToString()</label>
                    </div>
                    <div>
                        <label>Namena: @item.Namena.ToString()</label>
                    </div>

                    <div class="flex-sm-wrap">
                        <label class="flex-sm-wrap">Napomena: @item.Napomena</label>
                    </div>
                    <div>
                        <label>Cveće: </label>
                        @foreach (string cvet in item.Cvece)
                        {
                            <ul>@cvet</ul>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}