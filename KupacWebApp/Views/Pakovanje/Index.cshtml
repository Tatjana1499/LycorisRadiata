@using Domen
@model List<PakovanjeViewModel>

<div class="modal fade" id="infoPakovanje" >
    <div class="modal-dialog">
        <div class="modal-content">
            <div style="background-color:#ef9f9f" class="modal-header">
                <h6 class="modal-title">Detalji</h6>
                <button type="button" class="close" data-dismiss="modal"><span>x</span></button>
            </div>
            <div class="pre-scrollable">
                @foreach (PakovanjeViewModel item in Model)
                {
                <div class="modal-body" style="margin-bottom:10px; display:inline-flex;">
                    <div class="rounded" style="width: 50%; border: double;">
                        <div class="rounded" style="border-bottom:double; margin-left: 0; margin-right: 0">
                            <label>Naziv: @item.Naziv</label>
                        </div>
                        <div class="rounded" style="border-bottom:double; margin-left:0;margin-right:0">
                            <label>Materijal: @item.Materijal</label>
                        </div>
                        <div class="rounded" style="border-bottom: double; margin-left: 0; margin-right: 0">
                            <label>Boja: @item.Boja</label>
                        </div>
                        <div class="rounded" style="border-bottom: double; margin-left: 0; margin-right: 0">
                            <label>Oblik: @item.Oblik</label>
                        </div>
                        <div class="rounded" style="margin-left: 0; margin-right: 0">
                            <label>Cena: @item.Cena</label>
                        </div>
                    </div>
                    <div style="margin-left:8px; width:50%">
                        <img class="img-fluid rounded" style="position: center; border: double;" src="@item.Slika" />
                    </div>
                </div>
                   
                }
            </div>
        </div>
    </div>
</div>