<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] LycorisRadiata</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://kit.fontawesome.com/ca889d0a7d.js" crossorigin="anonymous"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Pocetna" asp-action="Index">Lycoris Radiata</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.IsInRole("Kupac"))
                        {

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="CvetniAranzman" asp-action="Create">Kreiraj cvetni aranzman</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="CvetniAranzman" asp-action="Index">Vaši cvetni aranžmani</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Narudzbina" asp-action="Index">Tvoje narudzbine</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Autentifikacija" asp-action="Odjava">Odjavi se</a>
                            </li>
                            <li class="nav-item">
                                <button style="position: absolute; top: 10px; right: 300px;" type="button" class="btn btn-primary btn-outline-dark" data-toggle="ajax-modal" data-target="#dodajNarudzbinu" data-url="@Url.Action("VrstaNarudzbine", "Narudzbina")">Naruci</button>
                            </li>

                        }
                        else if (User.IsInRole("Administrator"))
                        {


                            <li class="nav-item">
                                <a style="position: absolute; top: 10px; right: 100px;" class="nav-link text-dark" asp-area="" asp-controller="Autentifikacija" asp-action="Odjava">Odjavi se</a>
                            </li>

                        }
                        else
                        {

                            <li class="nav-item">
                                <a  style="position: absolute; top: 10px; right: 100px;" class="nav-link btn btn-primary btn-outline-dark font-weight-bolder" asp-area="" asp-controller="Autentifikacija" asp-action="Prijava">Prijava</a>
                            </li>

                         } 
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <div class="align-items-end" id="PlaceHolderHere"></div>
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - LycorisRadiata - Privacy
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
