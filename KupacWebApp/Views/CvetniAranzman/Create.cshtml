@model KreirajCvetniAranzmanViewModel
@using Domen


<label>Odavberite cvece: :</label>

<table class="table">
    <thead>
        <tr>
            <th>Naziv</th>
            <th>Boja</th>
            <th>Cena</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Cvet item in Model.Cvece)
        {
            <tr>
                <td>@item.Naziv</td>
                <td>@item.Boja.ToString()</td>
                <td>@item.Cena</td>
                <td><a href="Cvet/Index/@item.ProizvodId">Detalji</a></td>
                <td> <button type="button">Dodaj</button> </td>
            </tr>
        }
    </tbody>
</table>



<label>Odabrano cvece: </label>
<span class="alert-danger" asp-validation-for="Dekoracije"></span>
<table class="table"  style="margin-bottom:100px">

    <thead>
        <tr>
            <th>Naziv</th>
            <th>Boja</th>
            <th>Cena</th>
            <th typeof="number">Kolicina</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (DekoracijaViewModel item in Model.Dekoracije)
        {

            <tr>
                <td>@item.Cvet.Naziv</td>
                <td>@item.Cvet.Boja.ToString()</td>
                <td>@item.Cvet.Cena</td>
                <td>@item.BrojCvetova</td>
                <td> <button type="button">Ukloni</button> </td>
            </tr>
        }
    </tbody>
</table>

<form action="Create" method="post">

    <div class="form-group">
        <label>Cekiraj polje ako zelis da tvoj cvetni aranzman ima masnu: </label>
        <input asp-for="@Model.Masna" type="checkbox" />
    </div>
    <div class="form-group">
        <label>Izaberi sjaj: </label>
        <select asp-for="@Model.Sjaj" asp-items="Html.GetEnumSelectList<Sjaj>()"></select>
    </div>
    <div class="form-group">
        <label>Namena cvetnog aranzmana: </label>
        <select asp-for="@Model.Namena" asp-items="Html.GetEnumSelectList<Namena>()"></select>
    </div>
    <div class="form-group" style="display:inline-flex">
        <label style="margin-right:10px; width:130px">Izaberi pakovanje: </label>
        <select style="margin-right:50px; width:500px" asp-for="PakovanjeId" asp-items="@Model.Pakovanja" ></select>
        <button style=" width:80px" type="button">Detalji</button>
    </div>
    <div class="form-group" style="display:inline-flex">
        <label style="margin-right:20px">Napomena (opciono polje):</label>
        <textarea asp-for="@Model.Napomena" style="width:800px; max-height:100px"></textarea>
    </div>
    <div class="form-group">
        <input type="submit" value="Kreiraj" />
    </div>

</form>

